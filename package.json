{
  "name": "otpshare-bun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --watch src/index.tsx\" \"bun run tw:dev\" \"bun run typecheck:watch\"",
    "tw": "bunx tailwindcss -i ./src/styles.css -o ./public/styles.css",
    "tw:dev": "bunx tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
    "typecheck:watch": "tsc --watch",
    "generate": "drizzle-kit generate:sqlite",
    "migrate": "bun run src/db/migrate.ts",
    "lint": "eslint . && tsc",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "bun-types": "latest",
    "concurrently": "^8.2.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript-bun": "^0.0.42",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "typed-html": "^3.0.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^0.7.0",
    "@elysiajs/static": "^0.7.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "elysia": "^0.7.12",
    "jose": "^4.14.6"
  }
}
